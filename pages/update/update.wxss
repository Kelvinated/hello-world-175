.container {
  padding: 0px;
  height: 100%;
}

.flex {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap; 
}

.date-display {
  width: 100%;
  height: 90rpx;
  line-height: 80rpx;
  color: #F44336;
}

.week-cell {
  display: table-cell;
  width: 14.28%;
  text-align: center;
}

.selected-date {
  flex: 6;
  text-align: center;
  font-size: 37rpx;
}

.next-prev {
  flex: 1;
  text-align: center;
}

.arrow {
  height: 25rpx;
  width: 25rpx;
  border: solid #F44336;
  border-width: 0 6rpx 6rpx 0;
  margin: 22.5rpx auto;
}

.down {
  width: 20rpx;
  height: 20rpx;
  margin: -10rpx 0 0 12rpx;
  transform: rotate(45deg);
  border-width: 0 2rpx 2rpx 0;
}

.prev {
  transform: rotate(135deg);
}

.next {
  transform: rotate(-45deg)
}

.date-picker {
    background-color: #FBFCFC;
    border-bottom: .3rpx solid #E5E7E9;
}

.week-display {
  font-size: 22rpx;
