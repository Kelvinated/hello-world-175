/* pages/landing/landing.wxss */

.container {
  width: 100%;
  height: 400px;
  display: flex;
  flex-flow: row wrap;
}

swiper {
  position: relative;
  height: 100vh;
  align-items: center;
  bottom: 0px;
}

.item1 {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.swiper-item-bg {
  margin-top: 40%;
}

.landing-text {
  padding: 1%;
  position: absolute;
  color: white;
  font-size: 35pt;
  text-align: center;
  top: 58%;
  text-shadow: 2px 2px 3px rgb(78, 78, 78);
  word-break: keep-all;
  width: 100%;
}

@keyframes shimmy {
  0% {
    transform: translatey(-20px);
  }

  100% {
    transform: translatey(20px);
  }
}

.pic {
  margin-top: 40%;
}

.pic image {
  display: block;
  width: 176px;
  height: 176px;
  margin-left: auto;
  margin-right: auto;
}

.logo {
  margin-top: 38%;
}

.logo image {
  display: block;
  width: 320px;
  height: 320px;
  margin-left: auto;
  margin-right: auto;
}

.btn {
  position: relative;
  display: block;
  width: 75%;
  /* margin: 100px auto; */
  padding: 2px 20px;
  border-radius: 50px;
  box-shadow: 0 5px 0 0 #e9edee, 0 5px 0 2px #ccd2d2, 0 12px 20px 6px #d5dbdb;
  text-align: center;
  color: dimgrey;
  text-decoration: none;
  font-weight: bold;
  font-size: 24px;
  -webkit-tap-highlight-color: transparent;
}

.btn:active {
  top: 5px;
  box-shadow: 0 1px 0 2px #ccd2d2, 0 7px 20px 6px #d5dbdb;
}
