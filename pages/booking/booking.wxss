/* pages/booking/booking.wxss */

.page-container {
  margin: 0px;
  min-height: 100vh;
  height: 100%;
  padding: 10px;
}
.box {
  padding: 5px;
  margin-top: -2vh;
}
.section {
  display: flex;
  align-items: center;
  border-bottom: solid white;
  padding: 5px;
}
.section__title {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 16px;
}
.text-area-wrap {
  width: 60%;
  padding: 25rpx 10rpx;
  margin-left: auto;
  background-color: rgba(255, 255, 255, 0.8); 
  border-radius: 5px;
  height: 25px;
}
/* start/end time */
.section-time {
  display: flex;
  align-items: center;
  border-bottom: solid white;
  padding: 5px;
  flex-grow: 2;
}
.section-time-half {
  display: flex;
  align-items: center;
}
#section-time-end {
  margin-left: auto;
}
.text-area-time {
  width: 27vw;
  padding: 25rpx 10rpx;
  margin-left: 8px;
  background-color: rgba(255, 255, 255, 0.8); 
  border-radius: 5px;
  height: 25px;
}

/* others */
form {
font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
font-size: 16px; 
}
textarea {
 width:90%;
 height:100%;
}
.button-jittery {
  background-color: #01c261; 
  opacity: 1;
  width: 80%;
  z-index: 1;
  bottom: 5%;
  margin: 10px auto;
  font-size: 16pt;
  padding: 10px;
  color: black;
  border-radius: 5px;
  line-height: inherit;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.pair {
  display: flex;
  justify-items: center;
}

#back {
  padding-left: 4vw;
  padding-top: 7vh;
  width:32px;
  height:25px;
}

#logo{
   margin:37px 0 0 19px;
  position:absolute;
  margin-top:9%;
  margin-left:42%;
  width:56px;
  height:56px;
}

.banner{
  line-height: inherit;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 16pt;
  color: rgba(0, 0, 0, 0.377);
  display: flex;
  text-align: center;
  margin: 10px;
}